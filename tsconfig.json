{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],
    "jsx": "react",
    "sourceRoot": "./src",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}